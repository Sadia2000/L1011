<PropertyList>

<sim>
  <description>Lockheed L1011 TriStar</description>
  <aircraft-version>0.1</aircraft-version>
  <status>alpha</status>
  <rating>
    <FDM type="int">1</FDM>
    <systems type="int">0</systems>
    <cockpit type="int">0</cockpit>
    <model type="int">2</model>
  </rating>
  <author>Models: Toryx, Improved by Hornet (trying to)</author>
  <flight-model>jsb</flight-model>
  <aero>L1011-1</aero>
  <variant>1</variant>
  <engine>RB211-524B</engine>
    
	<!--
	<engine>RR RB211</engine>
  -->
  
  <startup>
    <!--<splash-texture>Aircraft/L1011/Splashs/splash-2.png</splash-texture>-->
     <splash-texture>Aircraft/L1011/Splashs/splash-2.png</splash-texture>
    <splash-title>Lockheed</splash-title>
  </startup>

   <gui>
	<style>
	    <colors>
		<splash-font>
	        	<red>1</red>
			<green>1</green>
		        <blue>1</blue>
		</splash-font>
		<splash-screen>
			<red>1.000</red>
		        <green>0.349</green>
			<blue>0.1725</blue>
		</splash-screen>
	   </colors>
	</style>
    </gui>


  <flaps>
    <setting>0.00</setting>
    <setting>0.29</setting>
    <setting>0.596</setting>
    <setting>0.745</setting>
    <setting>1</setting>
  </flaps>


  <model>
    <path>Aircraft/L1011/Models/L1011-1.xml</path>
    <livery>
      <file type="string"/>
    </livery>
    <pushback>
      <kp type="double">500</kp>
      <ki type="double">100</ki>
      <kd type="double">10</kd>
      <position-norm type="double">0</position-norm>
    </pushback>
  </model>

  <sound>
    <path>Aircraft/L1011/Sounds/L1011-sound.xml</path>
    <switch type = "bool">0</switch>
    <Evolume>1</Evolume>
  </sound>
  
  <view>
    <internal archive="y">true</internal>
    <config>
      <x-offset-m archive="y">-0.5373</x-offset-m>
      <y-offset-m archive="y">1.84</y-offset-m>
      <z-offset-m archive="y">-22.7399</z-offset-m>
      <pitch-offset-deg archive="y">-5.0</pitch-offset-deg>
      <default-field-of-view-deg type="double">110.0</default-field-of-view-deg>
    </config>
  </view>
  <chase-distance-m type="double">-80</chase-distance-m>
  
  <systems>
    <autopilot>
	  <path>Aircraft/L1011/Systems/it-autoflight.xml</path>
    </autopilot>
    <autopilot>
          <name>Pushback</name>
          <path>Aircraft/L1011/Systems/pushback.xml</path>
    </autopilot>
  </systems>
  
  <menubar>
    <default>
      <menu n="5">
       <item n="10">
         <label>Pushback</label>
         <name>pushback</name>
         <binding>
           <command>dialog-show</command>
           <dialog-name>pushback</dialog-name>
         </binding>
       </item>
      </menu>
      <menu n="100">
	<label>Lockheed L1011-1</label>
	<enabled type="bool">true</enabled>
	<item>
	  <label>Select Livery</label>
	  <binding>
	    <command>nasal</command>
	    <script>aircraft.livery.dialog.open()</script>
	  </binding>
	</item>
   		<item>
    		    <label>Pushback</label>
    		    <binding>
     			<command>dialog-show</command>
     			<dialog-name>pushback</dialog-name>
    		    </binding>
   		</item>
      </menu>
    </default>
  </menubar>
</sim>

<input>
  <keyboard>
   <key n="127">
    <name>Delete</name>
    <desc>Toggle Reversers</desc>
    <binding>
     <command>nasal</command>
     <script>L1011.togglereverser()</script>
    </binding>
   </key>
  </keyboard>
 </input>

<engines>
  <engine n="0">
    <running>true</running>
    <rpm>1000</rpm>
    <reverser-position type="double">0.000000</reverser-position>
  </engine>
  <engine n="1">
    <running>true</running>
    <rpm>1000</rpm>
    <reverser-position type="double">0.000000</reverser-position>
  </engine>
  <engine n="2">
    <running>true</running>
    <rpm>1000</rpm>
    <reverser-position type="double">0.000000</reverser-position>
  </engine>
</engines>	

<nasal>
  <L1011> 
    <file>Aircraft/L1011/Nasal/liveries.nas</file>
    <file>Aircraft/L1011/Nasal/reverse-thrust.nas</file>
    <file>Aircraft/L1011/Nasal/systems.nas</file>
  </L1011>
  <it2>
	<file>Aircraft/L1011/Nasal/autoflight.nas</file>
	<file>Aircraft/L1011/Nasal/autoflight-logic.nas</file>
  </it2>
</nasal> 

</PropertyList>
